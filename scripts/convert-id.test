expect_convert "$TEXT" --output text --input blob "$BLOB"
expect_convert "$HEX" --output hex --input text "$TEXT"
expect_convert "$HEX" --output hex --input hex "$HEX"
expect_convert "$HEX" --output hex --input blob "$BLOB"
