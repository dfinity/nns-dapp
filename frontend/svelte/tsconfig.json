{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "module": "es2020",
    "lib": ["es2020", "webworker", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*",
    "jest.setup.ts",
    "**/*Test.svelte"
  ]
}
