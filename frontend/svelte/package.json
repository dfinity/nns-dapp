{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:index": "node scripts/build.index.mjs",
    "i18n": "node scripts/i18n.types.js",
    "import-assets-for-dev": "cp -R ../dart/assets public/assets && cp ../dart/web/manifest.json public/ && cp ../dart/web/favicon.ico public/",
    "import-assets": "rm -fr public/assets/assets && mkdir -p public/assets && npm run import-assets-for-dev",
    "build": "rm -fr public/assets/assets && npm run i18n && rollup -c && npm run build:index",
    "dev": "npm run import-assets && npm run i18n && BASE_HREF=/ ROLLUP_WATCH=true npm run build:index && rollup -c -w",
    "start": "sirv public",
    "check": "svelte-check --tsconfig ./tsconfig.json && npm run lint",
    "lint": "eslint --max-warnings 0 './src/**/*.{js,ts,svelte}'",
    "format": "prettier --write --plugin-search-dir=. .",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "update:nns": "npm i @dfinity/nns@nightly"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-inject": "^4.0.4",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "@surma/rollup-plugin-off-main-thread": "^2.2.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^3.0.0",
    "@types/jest": "^27.4.1",
    "@types/marked": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.11.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "jest": "^27.5.1",
    "jest-mock-extended": "^2.0.4",
    "postcss": "^8.4.8",
    "postcss-load-config": "^3.1.3",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-svelte": "^2.6.0",
    "rollup": "^2.70.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.49.9",
    "sirv-cli": "^2.0.2",
    "svelte": "^3.46.4",
    "svelte-check": "^2.4.6",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^4.10.4",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@dfinity/agent": "^0.11.0",
    "@dfinity/auth-client": "^0.11.0",
    "@dfinity/nns": "nightly"
  }
}
